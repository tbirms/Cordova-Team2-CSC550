<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jsmobile.fibbonaccicalculator" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Fibbonacci Calculator</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <allow-intent href="market:*" />
        <!-- Icons -->
        <icon src="www/img/icon/android/ldpi.png" density="ldpi" />
        <icon src="www/img/icon/android/mdpi.png" density="mdpi" />
        <icon src="www/img/icon/android/hdpi.png" density="hdpi" />
        <icon src="www/img/icon/android/xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <edit-config target="NSMicrophoneUsageDescription" file="*-Info.plist" mode="merge">
            <string>need microphone access to record sounds</string>
        </edit-config>
        <icon src="www/img/icon/ios/icon-20@1x.png" width="20" height="20" />
        <icon src="www/img/icon/ios/icon-20@2x.png" width="40" height="40" />
        <icon src="www/img/icon/ios/icon-20@3x.png" width="60" height="60" />
        <icon src="www/img/icon/ios/icon-29@1x.png" width="29" height="29" />
        <icon src="www/img/icon/ios/icon-29@2x.png" width="58" height="58" />
        <icon src="www/img/icon/ios/icon-29@3x.png" width="87" height="87" />
        <icon src="www/img/icon/ios/icon-40@1x.png" width="40" height="40" />
        <icon src="www/img/icon/ios/icon-40@2x.png" width="80" height="80" />
        <icon src="www/img/icon/ios/icon-40@4x.png" width="160" height="160" />
        <icon src="www/img/icon/ios/icon-60@2x.png" width="120" height="120" />
        <icon src="www/img/icon/ios/icon-60@3x.png" width="180" height="180" />
        <icon src="www/img/icon/ios/icon-76@1x.png" width="76" height="76" />
        <icon src="www/img/icon/ios/icon-76@2x.png" width="152" height="152" />
        <icon src="www/img/icon/ios/icon-83.5@2x.png" width="167" height="167" />
    </platform>
</widget>
